<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="fragment" type="com.sunman.feature.calculationpanel.ui.CalculationPanelFragment" />
        <variable name="viewModel" type="com.sunman.feature.calculationpanel.presentation.CalculationPanelViewModel" />
    </data>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layoutPadding"
        android:orientation="vertical"
        android:weightSum="3">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/sinDescription"
                android:text="@string/sin"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/cosDescription"
                android:text="@string/cos"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/tanDescription"
                android:text="@string/tan"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/cotDescription"
                android:text="@string/cot"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/piDescription"
                android:text="@string/pi"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/lnDescription"
                android:text="@string/ln"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/log2Description"
                android:text="@string/log2"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/log10Description"
                android:text="@string/log10"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/absDescription"
                android:text="@string/abs"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/eDescription"
                android:text="@string/e"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/cbrtDescription"
                android:text="@string/cbrt"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rootDescription"
                android:text="@string/root"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/hypotDescription"
                android:text="@string/hypot"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/roundDescription"
                android:text="@string/round"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <Button
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/fractionDescription"
                android:text="@string/fraction"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />
        </TableRow>
    </TableLayout>
</layout>
