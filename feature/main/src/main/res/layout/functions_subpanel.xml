<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="fragment" type="com.sunman.feature.main.ui.MainFragment" />
        <variable name="viewModel" type="com.sunman.feature.main.presentation.MainViewModel" />
    </data>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sinButton"
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/sin_description"
                android:text="@string/sin"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cosButton"
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/cos_description"
                android:text="@string/cos"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tanButton"
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/tan_description"
                android:text="@string/tan"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cotButton"
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/cot_description"
                android:text="@string/cot"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/pi_description"
                android:text="@string/pi"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lnButton"
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/ln_description"
                android:text="@string/ln"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/log2Button"
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/log2_description"
                android:text="@string/log2"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lgButton"
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/lg_description"
                android:text="@string/lg"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/root_description"
                android:text="@string/root"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.CalculationPanel.Button.Function"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/e_description"
                android:text="@string/e"
                android:onClick="@{(view) -> fragment.addButtonTextToInputString(view)}" />
        </TableRow>
    </TableLayout>
</layout>
