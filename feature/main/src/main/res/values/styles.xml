<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.CalculationPanel.ToolbarStyle.Primary" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Widget.CalculationPanel.TextView.CalculationField" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginLeft">@dimen/calculation_result_field_margin</item>
        <item name="android:layout_marginRight">@dimen/calculation_result_field_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_padding</item>
        <item name="android:layout_marginBottom">@dimen/layout_padding</item>
        <item name="android:minHeight">@dimen/min_touchable_height</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Widget.CalculationPanel.TextView.CalculationResult" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginLeft">@dimen/calculation_result_field_margin</item>
        <item name="android:layout_marginRight">@dimen/calculation_result_field_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_padding</item>
        <item name="android:layout_marginBottom">@dimen/layout_padding</item>
        <item name="android:minHeight">@dimen/min_touchable_height</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Widget.CalculationPanel.Button" parent="Widget.Material3.Button">
        <item name="android:layout_margin">@dimen/btn_margin</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:lines">1</item>
        <item name="strokeWidth">@dimen/btn_stroke_width</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="iconSize">@dimen/btn_icon_size</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">@dimen/btn_elevation</item>
    </style>

    <style name="Widget.CalculationPanel.Button.Operation">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.CalculationPanel.Button.Control">
        <item name="backgroundTint">?attr/colorTertiary</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="iconTint">?attr/colorOnTertiary</item>
    </style>

    <style name="Widget.CalculationPanel.Button.Function">
        <item name="android:textSize">@dimen/func_btn_text_size</item>
    </style>

    <style name="Widget.CalculationPanel.Button.Control.AngleUnit" />

    <style name="Widget.CalculationPanel.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerThickness">@dimen/divider_height</item>
    </style>
</resources>
